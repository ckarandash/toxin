{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitOverride": true,
    "typeRoots" : ["./node_modules/@types", "./typings"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
}